<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{title}}" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input">{{body}}</textarea>

    <button type="submit" class="btn" name = "{{id}}" >Update</button>
    


    <button type="button" id="delete-btn" class="btn" name = "{{id}}">Delete</button>
  </form>
</div>
<script src="/js/edit.js"></script>

